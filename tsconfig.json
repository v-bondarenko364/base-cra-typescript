{
	"compilerOptions": {
		"baseUrl": "./",
		"paths": {
			"@lang/*": ["src/lang/*"],
			"@modules/*": ["src/modules/*"],
			"@services/*": ["src/services/*"],
			"@static/*": ["src/static/*"],
			"@store/*": ["src/store/*"],
			"@theme/*": ["src/theme/*"]
		},
		"target": "es5",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react"
	},
	"include": ["src", "typings"]
}
